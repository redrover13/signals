# Example values for terraform.tfvars
# Copy this file to terraform.tfvars and modify values as needed

# ============================================================================
# PROJECT CONFIGURATION
# ============================================================================

# GCP Project Configuration
project_id = "saigon-signals"
region     = "asia-southeast1"

# Environment Configuration
environment = "prod"

# ============================================================================
# DATA ACCESS CONFIGURATION
# ============================================================================

# Data Access Configuration  
data_owner_email     = "admin@saigon-signals.com"
organization_domain  = "saigon-signals.com"

# ============================================================================
# SERVICE ACCOUNT CONFIGURATION
# ============================================================================

# Service Account Configuration
terraform_service_account = "github-actions@saigon-signals.iam.gserviceaccount.com"
create_github_sa = true

# ============================================================================
# DATA RETENTION CONFIGURATION
# ============================================================================

# Data Retention Configuration
table_expiration_days = 90

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Feature Flags
enable_monitoring     = true
enable_legacy_modules = false  # Set to true if you need backwards compatibility

# ============================================================================
# LABELS AND TAGS
# ============================================================================

# Additional Labels
labels = {
  project      = "dulce-de-saigon"
  team         = "platform"
  cost-center  = "engineering"
  environment  = "production"
  managed_by   = "terraform"
}

# ============================================================================
# ENVIRONMENT-SPECIFIC EXAMPLES
# ============================================================================

