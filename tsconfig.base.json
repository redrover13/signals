{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@dulce-de-saigon/agents-lib": ["libs/agents/src/index.ts"],
      "@dulce/adk": ["libs/adk/src/index.ts"],
      "@dulce/env": ["libs/env/src/index.ts"],
      "@dulce/gcp": ["libs/gcp/src/index.ts"],
      "@nx-monorepo/agents/gemini-orchestrator": ["libs/agents/gemini-orchestrator/src/index.ts"],
      "@nx-monorepo/bq-agent": ["libs/agents/bq-agent/src/index.ts"],
      "@nx-monorepo/content-agent": ["libs/agents/content-agent/src/index.ts"],
      "@nx-monorepo/crm-agent": ["libs/agents/crm-agent/src/index.ts"],
      "@nx-monorepo/gemini-orchestrator": ["libs/agents/gemini-orchestrator/src/index.ts"],
      "@nx-monorepo/looker-agent": ["libs/agents/looker-agent/src/index.ts"],
      "@nx-monorepo/mcp": ["libs/mcp/src/index.ts"],
      "@nx-monorepo/reviews-agent": ["libs/agents/reviews-agent/src/index.ts"],
      "@nx-monorepo/utils/monitoring": ["libs/utils/monitoring/src/index.ts"],
      "@nx-monorepo/utils/signals": ["libs/utils/signals/src/index.ts"],
      "@signals/build-tools": ["libs/build-tools/src/index.ts"],
      "agents-sdk": ["libs/agents-sdk/src/index.ts"],
      "dbt-models": ["libs/data-models/dbt-models/src/index.ts"],
      "gcp-auth": ["libs/utils/gcp-auth/src/index.ts"],
      "gemini-orchestrator": ["libs/agents/gemini-orchestrator/src/index.ts"],
      "looker-dashboards": ["apps/looker-dashboards/src/index.ts"],
      "reviews-agent": ["libs/agents/reviews-agent/src/index.ts"],
      "vertex-agents": ["infra/terraform/vertex-agents/src/index.ts"]
    },
    "outDir": "./dist/out-tsc",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "dom"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": ["node_modules", "tmp"],
  "include": ["**/*.ts", "**/*.tsx", "**/*.d.ts", "**/*.js"],
  "references": [
    {
      "path": "./tsconfig.references.json"
    }
  ]
}
