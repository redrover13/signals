{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MCP Server Configuration Schema",
  "description": "Enterprise-grade Model Context Protocol server configuration schema",
  "type": "object",
  "required": ["servers"],
  "properties": {
    "servers": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z][a-zA-Z0-9_-]*$": {
          "type": "object",
          "oneOf": [
            {
              "title": "HTTP Server",
              "required": ["url", "type"],
              "properties": {
                "url": {
                  "type": "string",
                  "format": "uri",
                  "description": "HTTP endpoint URL for the MCP server"
                },
                "type": {
                  "const": "http"
                },
                "headers": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "string"
                  }
                },
                "timeout": {
                  "type": "integer",
                  "minimum": 1000,
                  "default": 30000
                }
              }
            },
            {
              "title": "STDIO Server",
              "required": ["command", "type"],
              "properties": {
                "command": {
                  "type": "string",
                  "description": "Command to execute for STDIO MCP server"
                },
                "args": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "type": {
                  "const": "stdio"
                },
                "env": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "string"
                  }
                },
                "cwd": {
                  "type": "string"
                }
              }
            }
          ]
        }
      }
    },
    "inputs": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "default": "1.0.0"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "environment": {
          "type": "string",
          "enum": ["development", "staging", "production"]
        }
      }
    }
  }
}
