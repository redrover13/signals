{
  "name": "functions",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "infra/terraform/functions/src",
  "projectType": "library",
  "tags": ["scope:infra", "type:iac"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/infra/terraform/functions",
        "main": "infra/terraform/functions/src/index.ts",
        "tsConfig": "infra/terraform/functions/tsconfig.lib.json",
        "assets": ["infra/terraform/functions/*.md"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "infra/terraform/functions/jest.config.ts"
      }
    }
  }
}
