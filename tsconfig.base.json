{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@dulce-de-saigon/agents-lib": ["dist/libs/agents/src/index.d.ts"],
      "@dulce/adk": ["dist/adk/index.d.ts"],
      "@dulce/gcp": ["dist/libs/gcp/src/index.d.ts"],
      "@nx-monorepo/mcp": ["dist/libs/mcp/src/index.d.ts"],
      "dbt-models": ["libs/data-models/dbt-models/src/index.ts"],
      "gcp-auth": ["libs/utils/gcp-auth/src/index.ts"],
      "gemini-orchestrator": ["libs/agents/gemini-orchestrator/src/index.ts"],
      "looker-dashboards": ["apps/looker-dashboards/src/index.ts"],
      "reviews-agent": ["libs/agents/reviews-agent/src/index.ts"],
      "vertex-agents": ["infra/terraform/vertex-agents/src/index.ts"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "exclude": ["node_modules", "tmp"],
  "include": ["**/*.ts", "**/*.tsx", "**/*.d.ts", "**/*.js"]
}
