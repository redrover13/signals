{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "types": ["jest", "node"]
  },
  "include": [
    "jest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "exclude": ["node_modules", "tmp", "dist"]
}
