{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@nx-monorepo/*": ["libs/*"],
      "@nx-monorepo/adk": ["libs/adk/src/index.ts"],
      "@nx-monorepo/agents": ["libs/agents/src/index.ts"],
      "@nx-monorepo/agents/gemini-orchestrator": ["libs/agents/gemini-orchestrator/src/index.ts"],
      "@nx-monorepo/agents/bq-agent": ["libs/agents/bq-agent/src/index.ts"],
      "@nx-monorepo/agents/content-agent": ["libs/agents/content-agent/src/index.ts"],
      "@nx-monorepo/agents/crm-agent": ["libs/agents/crm-agent/src/index.ts"],
      "@nx-monorepo/agents/looker-agent": ["libs/agents/looker-agent/src/index.ts"],
      "@nx-monorepo/agents/reviews-agent": ["libs/agents/reviews-agent/src/index.ts"],
      "@nx-monorepo/agents-sdk": ["libs/agents-sdk/src/index.ts"],
      "@nx-monorepo/build-tools": ["libs/build-tools/src/index.ts"],
      "@nx-monorepo/gcp": ["libs/gcp/src/index.ts"],
      "@nx-monorepo/mcp": ["libs/mcp/src/index.ts"],
      "@nx-monorepo/utils/api-clients": ["libs/utils/api-clients/src/index.ts"],
      "@nx-monorepo/utils/gcp-auth": ["libs/utils/gcp-auth/src/index.ts"],
      "@nx-monorepo/utils/monitoring": ["libs/utils/monitoring/src/index.ts"],
      "@nx-monorepo/utils/signals": ["libs/utils/signals/src/index.ts"],
      "@nx-monorepo/data-models/dbt-models": ["libs/data-models/dbt-models/src/index.ts"],
      "@nx-monorepo/data-models/schemas": ["libs/data-models/schemas/src/index.ts"],
      "@nx-monorepo/env": ["libs/env/src/index.ts"],
      "@nx-monorepo/security": ["libs/security/src/index.ts"],
      "@nx-monorepo/ui/components": ["libs/ui/components/src/index.ts"],
      "@nx-monorepo/utils/secrets-manager": ["libs/utils/secrets-manager/src/index.ts"],
      "@nx-monorepo/gcp-core": ["libs/gcp-core/src/index.ts"]
    },
    "outDir": "./dist/out-tsc",
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "dom"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false
  },
  "exclude": ["node_modules", "tmp"],
  "include": ["**/*.ts", "**/*.tsx", "**/*.d.ts", "**/*.js"],
  "references": [
    { "path": "./tsconfig.references.json" },
    { "path": "./libs/gcp-core" }
  ]
}
