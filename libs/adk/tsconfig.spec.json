{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "types": ["jest", "node"]
  },
  "include": [
    "jest.config.ts",
    "src/**/*.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "src/**/*.d.ts",
    "../../libs/gcp/src/**/*.ts",
    "../../libs/gcp-core/src/**/*.ts",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
