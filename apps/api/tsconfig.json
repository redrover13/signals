  "include": [
    "src/**/*.ts",
    "../../libs/mcp/src/**/*.ts",
    "../../libs/adk/src/**/*.ts",
    "../../libs/utils/monitoring/src/**/*.ts",
    "../../libs/gcp/src/**/*.ts",
    "../../libs/gcp-core/src/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
